<body class="p-4 md:p-8">

    <div class="max-w-7xl mx-auto">
        <header class="flex flex-col md:flex-row justify-between items-center mb-10 gap-6">
            <div>
                <h1 class="text-3xl font-black uppercase italic text-slate-800 tracking-tighter">Corte <span class="text-blue-600">Unificado</span></h1>
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">DPR Consultoría | Rendimiento Real del Negocio</p>
            </div>
            <div class="flex gap-3">
                <a href="../admin.html" class="bg-slate-200 text-slate-600 px-6 py-3 rounded-xl font-black text-[10px] uppercase hover:bg-slate-300 transition">Panel Admin</a>
                <button onclick="window.cerrarCorteMaestro()" class="bg-slate-900 text-white px-6 py-3 rounded-xl font-black text-[10px] uppercase shadow-xl hover:bg-blue-600 transition">Cerrar Corte Diario</button>
            </div>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
            <div class="card p-8 border-l-8 border-blue-500">
                <p class="stat-label">Ventas Hoy</p>
                <p id="totalHoy" class="text-4xl font-black text-slate-800 mt-2">$ 0.00</p>
                <p id="utilidadHoy" class="text-xs font-bold text-emerald-500 mt-1">Utilidad: $ 0.00</p>
            </div>
            <div class="card p-8 border-l-8 border-purple-500">
                <p class="stat-label">Últimos 7 Días</p>
                <p id="totalSemana" class="text-4xl font-black text-slate-800 mt-2">$ 0.00</p>
                <p id="utilidadSemana" class="text-xs font-bold text-emerald-500 mt-1">Utilidad: $ 0.00</p>
            </div>
            <div class="card p-8 border-l-8 border-orange-500">
                <p class="stat-label">Mes Actual</p>
                <p id="totalMes" class="text-4xl font-black text-slate-800 mt-2">$ 0.00</p>
                <p id="utilidadMes" class="text-xs font-bold text-emerald-500 mt-1">Utilidad: $ 0.00</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <section class="lg:col-span-1">
                <div class="card p-8 sticky top-24">
                    <h2 class="text-xl font-black uppercase italic mb-6 text-slate-700 border-l-4 border-blue-600 pl-4">Venta Directa</h2>
                    <div class="space-y-4">
                        <div>
                            <label class="stat-label ml-2">Producto / Servicio</label>
                            <input type="text" id="nombreProducto" oninput="window.verificarProductoExistente()" class="w-full input-dark uppercase" placeholder="EJ: ANÁLISIS COMPLETO">
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="stat-label ml-2">Costo ($)</label>
                                <input type="number" id="costoProducto" class="w-full input-dark" placeholder="0.00">
                            </div>
                            <div>
                                <label class="stat-label ml-2">Venta ($)</label>
                                <input type="number" id="precioVenta" class="w-full input-dark" placeholder="0.00">
                            </div>
                        </div>
                        <button onclick="window.registrarVentaManual()" class="w-full bg-blue-600 text-white py-4 rounded-2xl font-black uppercase italic shadow-lg hover:scale-[1.02] transition">Registrar Venta</button>
                    </div>
                </div>
            </section>

            <section class="lg:col-span-2">
                <div class="card overflow-hidden">
                    <div class="p-8 border-b flex justify-between items-center bg-slate-50/50">
                        <h2 class="text-xl font-black uppercase italic text-slate-700">Bitácora de Movimientos</h2>
                        <button onclick="window.descargarReporte()" class="text-[10px] font-black text-blue-600 uppercase border-b-2 border-blue-600 tracking-widest">Generar Reporte TXT</button>
                    </div>
                    <div class="overflow-x-auto max-h-[600px]">
                        <table class="w-full text-left">
                            <thead class="bg-slate-100 text-[9px] font-black uppercase text-slate-400">
                                <tr>
                                    <th class="p-5">Origen</th>
                                    <th class="p-5">Detalle</th>
                                    <th class="p-5">Venta</th>
                                    <th class="p-5">Ganancia</th>
                                    <th class="p-5 text-right">Acción</th>
                                </tr>
                            </thead>
                            <tbody id="tablaVentas" class="text-xs font-bold"></tbody>
                        </table>
                    </div>
                </div>
            </section>
