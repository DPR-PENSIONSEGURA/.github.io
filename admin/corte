    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
        import { getFirestore, collection, onSnapshot, query, where, addDoc, serverTimestamp, orderBy, deleteDoc, doc, Timestamp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyAEDygVfkQbJgMuEmm_We-OlQFTKzQ1raM",
            authDomain: "pensionsegura-9c817.firebaseapp.com",
            projectId: "pensionsegura-9c817"
        };
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // Catálogo persistente (tu lógica original)
        let productosMaestros = JSON.parse(localStorage.getItem('catalogoProductos') || '{}');
        let registroActual = [];

        // 1. CARGAR DATOS Y ESCUCHAR CAMBIOS
        const cargarFinanzasUnificadas = () => {
            const hoy = new Date(); hoy.setHours(0,0,0,0);
            const semana = new Date(); semana.setDate(semana.getDate() - 7);
            const mes = new Date(); mes.setDate(1); mes.setHours(0,0,0,0);

            onSnapshot(query(collection(db, "solicitudes"), orderBy("fecha", "desc")), (snap) => {
                registroActual = [];
                let h_bruto = 0, h_util = 0, s_bruto = 0, s_util = 0, m_bruto = 0, m_util = 0;
                
                const tabla = document.getElementById('tablaVentas');
                tabla.innerHTML = "";

                snap.forEach(d => {
                    const v = d.data();
                    if(v.tipo === "RECARGA ASESOR") return; // Ignorar contablemente las recargas
                    
                    const fecha = v.fecha?.toDate() || new Date();
                    const ingreso = Number(v.costo || 0);
                    const costoBase = Number(v.costo_base || 0);
                    const gananciaItem = ingreso - costoBase;

                    // Acumuladores Financieros
                    if(fecha >= hoy) { h_bruto += ingreso; h_util += gananciaItem; }
                    if(fecha >= semana) { s_bruto += ingreso; s_util += gananciaItem; }
                    if(fecha >= mes) { m_bruto += ingreso; m_util += gananciaItem; }

                    // Llenar bitácora (últimos movimientos)
                    const limiteVista = new Date(); limiteVista.setDate(limiteVista.getDate() - 5);
                    if(fecha >= limiteVista) {
                        registroActual.push({ ...v, id: d.id, gananciaItem });
                        tabla.innerHTML += `
                        <tr class="border-b hover:bg-slate-50 transition">
                            <td class="p-5"><span class="px-2 py-1 rounded text-[8px] font-black ${v.origen === 'MANUAL' ? 'bg-orange-100 text-orange-600' : 'bg-blue-100 text-blue-600'} uppercase">${v.origen || 'WEB'}</span></td>
                            <td class="p-5 font-black uppercase text-slate-700">${v.tipo}</td>
                            <td class="p-5 text-slate-900">$${ingreso.toFixed(2)}</td>
                            <td class="p-5 text-emerald-600 font-black">$${gananciaItem.toFixed(2)}</td>
                            <td class="p-5 text-right"><button onclick="window.eliminarVenta('${d.id}')" class="text-red-300 hover:text-red-600 transition">✕</button></td>
                        </tr>`;
                    }
                });

                // Renderizar Contadores
                const fmt = new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' });
                document.getElementById('totalHoy').innerText = fmt.format(h_bruto);
                document.getElementById('utilidadHoy').innerText = `Utilidad: ${fmt.format(h_util)}`;
                document.getElementById('totalSemana').innerText = fmt.format(s_bruto);
                document.getElementById('utilidadSemana').innerText = `Utilidad: ${fmt.format(s_util)}`;
                document.getElementById('totalMes').innerText = fmt.format(m_bruto);
                document.getElementById('utilidadMes').innerText = `Utilidad: ${fmt.format(m_util)}`;
            });
        };

        // 2. LÓGICA DE AUTOCOMPLETADO (De tu archivo DPR VENTAS.txt)
        window.verificarProductoExistente = () => {
            const nombreInput = document.getElementById('nombreProducto');
            const costoInput = document.getElementById('costoProducto');
            const precioInput = document.getElementById('precioVenta');
            const nombre = nombreInput.value.trim().toUpperCase();

            if (productosMaestros[nombre]) {
                costoInput.value = productosMaestros[nombre].costo;
                precioInput.value = productosMaestros[nombre].precio;
                costoInput.disabled = true;
                precioInput.disabled = true;
                costoInput.classList.add('input-disabled');
                precioInput.classList.add('input-disabled');
            } else {
                costoInput.disabled = false;
                precioInput.disabled = false;
                costoInput.classList.remove('input-disabled');
                precioInput.classList.remove('input-disabled');
                if (nombre === '') { costoInput.value = ''; precioInput.value = ''; }
            }
        };

        // 3. REGISTRAR VENTA MANUAL
        window.registrarVentaManual = async () => {
            const nom = document.getElementById('nombreProducto').value.trim().toUpperCase();
            const cost = parseFloat(document.getElementById('costoProducto').value) || 0;
            const prec = parseFloat(document.getElementById('precioVenta').value) || 0;

            if(!nom || prec <= 0) return alert("Por favor completa los datos de venta.");

            // Guardar en catálogo si es nuevo (localStorage)
            if(!productosMaestros[nom]) {
                productosMaestros[nom] = { costo: cost, precio: prec };
                localStorage.setItem('catalogoProductos', JSON.stringify(productosMaestros));
            }

            await addDoc(collection(db, "solicitudes"), {
                tipo: nom, costo: prec, costo_base: cost,
                origen: "MANUAL", fecha: serverTimestamp(), estatus: "Terminado", nombre: "VENTA DIRECTA"
            });

            document.getElementById('nombreProducto').value = "";
            document.getElementById('costoProducto').value = "";
            document.getElementById('precioVenta').value = "";
            window.verificarProductoExistente();
        };

        // 4. CIERRE HISTÓRICO
        window.cerrarCorteMaestro = async () => {
            if(!confirm("¿Confirmas cerrar el corte? Esto guardará un respaldo histórico del ingreso hoy.")) return;
            await addDoc(collection(db, "cortes_historicos"), {
                fecha: serverTimestamp(),
                ingreso_bruto: document.getElementById('totalHoy').innerText,
                utilidad_neta: document.getElementById('utilidadHoy').innerText
            });
            alert("¡Corte guardado exitosamente!");
        };

        window.eliminarVenta = async (id) => {
            if(confirm("¿Eliminar registro permanentemente?")) await deleteDoc(doc(db, "solicitudes", id));
        };

        window.descargarReporte = () => {
            let txt = `DPR CONSULTORIA - CORTE ${new Date().toLocaleDateString()}\n`;
            txt += `-------------------------------------------\n`;
            txt += `TOTAL HOY: ${document.getElementById('totalHoy').innerText}\n`;
            txt += `UTILIDAD: ${document.getElementById('utilidadHoy').innerText}\n\n`;
            txt += `DETALLE DE MOVIMIENTOS:\n`;
            registroActual.forEach(v => {
                txt += `[${v.origen || 'WEB'}] ${v.tipo.padEnd(15)} | Venta: $${v.costo} | Utilidad: $${v.gananciaItem}\n`;
            });
            const blob = new Blob([txt], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url; a.download = `Reporte_Corte_DPR.txt`; a.click();
        };

        cargarFinanzasUnificadas();
    </script>
</body>
