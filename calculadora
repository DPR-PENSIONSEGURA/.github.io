<body>

    <div id="pantallaCobro" class="fixed inset-0 bg-slate-900 z-50 flex items-center justify-center p-4">
        <div class="bg-slate-800 w-full max-w-2xl rounded-[3rem] p-8 md:p-10 text-center border border-slate-700 shadow-2xl relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-blue-500/10 rounded-full -mr-16 -mt-16 blur-2xl"></div>
            <h2 class="text-2xl font-black text-white uppercase italic mb-2">Herramientas Pro</h2>
            <p class="text-blue-400 text-[10px] font-black uppercase tracking-[0.2em] mb-6">✨ Oferta de Lanzamiento ✨</p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                <button onclick="seleccionarHerramienta('LEY 73 + MOD 40', 60, 'pension')" id="opt_pension" class="group bg-slate-900 p-6 rounded-3xl border-2 border-transparent hover:border-blue-500 transition-all text-left relative">
                    <p class="text-[9px] font-black text-blue-500 uppercase mb-1">Más Completo</p>
                    <p class="text-white font-black text-xs leading-tight uppercase italic mb-2">Pensión Ley 73 + Estrategia M40</p>
                    <p class="text-xl font-black text-white">$60.00</p>
                </button>

                <button onclick="seleccionarHerramienta('SIMULADOR LEY 97', 30, 'ley97')" id="opt_ley97" class="group bg-slate-900 p-6 rounded-3xl border-2 border-transparent hover:border-orange-500 transition-all text-left relative">
                    <p class="text-[9px] font-black text-orange-500 uppercase mb-1">Nuevo</p>
                    <p class="text-white font-black text-xs leading-tight uppercase italic mb-2">Pensión Ley 97 (AFORE)</p>
                    <p class="text-xl font-black text-white">$30.00</p>
                </button>

                <button onclick="seleccionarHerramienta('CÁLCULO 250 SEMANAS', 25, 'salario')" id="opt_salario" class="group bg-slate-900 p-6 rounded-3xl border-2 border-transparent hover:border-blue-500 transition-all text-left relative">
                    <p class="text-[9px] font-black text-slate-500 uppercase mb-1">Herramienta</p>
                    <p class="text-white font-black text-xs leading-tight uppercase italic mb-2">Salario Promedio 250 Sem</p>
                    <p class="text-xl font-black text-white">$25.00</p>
                </button>
            </div>

            <div class="mb-6">
                <p class="text-xs text-slate-400 font-bold mb-2 uppercase">Tu Saldo: <span id="txtSaldoAsesor" class="text-blue-400">$0.00</span></p>
                <button id="btnPagarAcceso" onclick="confirmarCompraHerramienta()" disabled class="w-full gold-gradient py-4 rounded-2xl font-black uppercase italic text-slate-900 shadow-lg text-lg opacity-50 transition-all">
                    Selecciona una opción
                </button>
            </div>
            <button onclick="window.close()" class="text-slate-500 font-bold text-[10px] uppercase hover:text-white transition">Cancelar y Salir</button>
        </div>
    </div>

    <div id="root" class="hidden"></div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
        import { getFirestore, doc, onSnapshot, updateDoc, addDoc, collection, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";
        import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyAEDygVfkQbJgMuEmm_We-OlQFTKzQ1raM",
            authDomain: "pensionsegura-9c817.firebaseapp.com",
            projectId: "pensionsegura-9c817",
            storageBucket: "pensionsegura-9c817.firebasestorage.app",
            messagingSenderId: "169500313261",
            appId: "1:169500313261:web:15e2b662571df505d36824"
        };
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        let saldoGlobal = 0, userUID = "", emailAsesor = "";
        let herramientaSeleccionada = null, costoSeleccionado = 0, tabDestino = '';

        onAuthStateChanged(auth, (user) => {
            if (user) { 
                userUID = user.uid; emailAsesor = user.email;
                onSnapshot(doc(db, "asesores", userUID), (docSnap) => {
                    if (docSnap.exists()) {
                        saldoGlobal = docSnap.data().saldo || 0;
                        document.getElementById('txtSaldoAsesor').innerText = `$${saldoGlobal.toFixed(2)}`;
                    }
                });
            } else { window.location.href = "login/index.html"; }
        });

        window.seleccionarHerramienta = (nombre, costo, tab) => {
            herramientaSeleccionada = nombre; costoSeleccionado = costo; tabDestino = tab;
            ['opt_pension', 'opt_salario', 'opt_ley97'].forEach(id => {
                document.getElementById(id).className = 'group bg-slate-900 p-6 rounded-3xl border-2 border-transparent hover:border-blue-500 transition-all text-left relative';
            });
            document.getElementById(`opt_${tab}`).className = 'group bg-slate-800 p-6 rounded-3xl border-2 border-blue-500 transition-all text-left relative';
            const btn = document.getElementById('btnPagarAcceso');
            btn.disabled = false; btn.classList.remove('opacity-50'); btn.innerText = `Desbloquear por $${costo}.00`;
        };

        window.confirmarCompraHerramienta = async () => {
            if (saldoGlobal < costoSeleccionado) return alert("Saldo insuficiente.");
            const btn = document.getElementById('btnPagarAcceso'); btn.innerText = "PROCESANDO..."; btn.disabled = true;
            try {
                await updateDoc(doc(db, "asesores", userUID), { saldo: saldoGlobal - costoSeleccionado });
                await addDoc(collection(db, "solicitudes"), {
                    asesor_uid: userUID, origen: "ASESOR", nombre: emailAsesor,
                    tipo: `ACCESO: ${herramientaSeleccionada}`, folio: "PREM-" + Math.floor(1000 + Math.random() * 9000),
                    estatus: "Terminado", fecha: serverTimestamp(), costo: costoSeleccionado
                });
                document.getElementById('pantallaCobro').classList.add('hidden');
                document.getElementById('root').classList.remove('hidden');
                window.dispatchEvent(new CustomEvent('inicioApp', { detail: tabDestino }));
            } catch (e) { alert("Error de conexión"); btn.disabled = false; }
        };
    </script>

    <script type="text/babel">
        const { useState, useMemo, useEffect } = React;

        const App = () => {
          const [view, setView] = useState(null);
          useEffect(() => {
            const handleInit = (e) => setView(e.detail);
            window.addEventListener('inicioApp', handleInit);
            return () => window.removeEventListener('inicioApp', handleInit);
          }, []);

          const fmt = (v) => new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(v || 0);

          // --- ESTADOS LEY 97 ---
          const [aforeSaldo, setAforeSaldo] = useState(500000);
          const [aforeSalario, setAforeSalario] = useState(15000);
          const [aforeEdad, setAforeEdad] = useState(45);
          const [aforeRetiro, setAforeRetiro] = useState(65);

          const calculoLey97 = useMemo(() => {
            const añosRestantes = aforeRetiro - aforeEdad;
            const tasaRendimientoReal = 0.045; 
            const tasaAportacion = 0.085; 
            let saldoFinal = aforeSaldo * Math.pow(1 + tasaRendimientoReal, añosRestantes);
            const aportacionAnual = (aforeSalario * 12) * tasaAportacion;
            for (let i = 1; i <= añosRestantes; i++) { saldoFinal += aportacionAnual * Math.pow(1 + tasaRendimientoReal, i); }
            return saldoFinal / 240;
          }, [aforeSaldo, aforeSalario, aforeEdad, aforeRetiro]);

          // --- ESTADOS LEY 73 INTEGRADA ---
          const [semanas73, setSemanas73] = useState(1000);
          const [salarioActual73, setSalarioActual73] = useState(500);
          const [edad73, setEdad73] = useState(60);
          const [usaM40, setUsaM40] = useState(false);
          const [aniosM40, setAniosM40] = useState(1);
          const [salarioInversionM40, setSalarioInversionM40] = useState(2823.50);
          const [tieneEsposa, setTieneEsposa] = useState(true);
          const [numeroHijos, setNumeroHijos] = useState(0);

          const calculo73 = useMemo(() => {
            let semFinales = semanas73;
            let salFinal = salarioActual73;
            if (usaM40) {
                const semExtra = aniosM40 * 52;
                semFinales += semExtra;
                const semNuevas = Math.min(250, semExtra);
                const semViejas = Math.max(0, 250 - semNuevas);
                salFinal = ((salarioInversionM40 * semNuevas) + (salarioActual73 * semViejas)) / 250;
            }
            let porcEdad = 0.75 + ((edad73 + (usaM40 ? aniosM40 : 0) - 60) * 0.05);
            if (porcEdad > 1) porcEdad = 1;
            let asig = (tieneEsposa ? 0.15 : 0) + (numeroHijos * 0.10);
            if (asig === 0) asig = 0.15;
            const pension = (salFinal * 30.4 * porcEdad) * (1 + asig) * 1.11;
            const pmg = (248.93 * 365 / 12) * 1.11;
            return Math.max(pension, pmg);
          }, [semanas73, salarioActual73, edad73, usaM40, aniosM40, salarioInversionM40, tieneEsposa, numeroHijos]);

          // --- ESTADOS SALARIO ---
          const [filas, setFilas] = useState([{ desde: '', hasta: '', salario: 0 }]);
          const agregarFila = () => setFilas([...filas, { desde: '', hasta: '', salario: 0 }]);
          const actualizarFila = (idx, campo, val) => { const n = [...filas]; n[idx][campo] = val; setFilas(n); };
          const calculoSalario = useMemo(() => {
            let dTot = 0; let sPond = 0;
            filas.forEach(f => {
              if(f.desde && f.hasta && f.salario > 0) {
                const diff = Math.ceil((new Date(f.hasta) - new Date(f.desde)) / (1000 * 60 * 60 * 24)) + 1;
                if(diff > 0) { dTot += diff; sPond += (diff * f.salario); }
              }
            });
            return { promedio: dTot > 0 ? (sPond / dTot) : 0, semanas: (dTot / 7).toFixed(1) };
          }, [filas]);

          if (!view) return null;

          return (
            <div className="max-w-6xl mx-auto p-4 md:p-8 min-h-screen">
              {view === 'pension' && (
                <div className="grid grid-cols-1 lg:grid-cols-12 gap-8">
                  <div className="lg:col-span-5 space-y-6 no-print">
                    <div className="bg-white p-8 rounded-[2.5rem] shadow-xl border border-slate-100">
                      <h2 className="text-xl font-black uppercase text-slate-800 mb-6 italic border-l-4 border-blue-600 pl-4">Datos Ley 73</h2>
                      <div className="space-y-4 font-bold text-slate-600">
                        <label className="text-[10px] uppercase">Semanas Actuales</label>
                        <input type="number" value={semanas73} onChange={e => setSemanas73(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl font-black" />
                        <label className="text-[10px] uppercase">Salario Diario</label>
                        <input type="number" value={salarioActual73} onChange={e => setSalarioActual73(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl font-black text-blue-600" />
                        <label className="text-[10px] uppercase">Edad: {edad73} años</label>
                        <input type="range" min="60" max="65" value={edad73} onChange={e => setEdad73(Number(e.target.value))} className="w-full h-2 bg-blue-100 rounded-lg appearance-none cursor-pointer accent-blue-600" />
                      </div>
                    </div>
                    <div className="bg-white p-8 rounded-[2.5rem] shadow-xl border border-slate-100 font-bold text-slate-600">
                        <label className="flex items-center gap-3 cursor-pointer mb-4"><input type="checkbox" checked={tieneEsposa} onChange={e => setTieneEsposa(e.target.checked)} className="w-5 h-5" />Esposa / Concubina (+15%)</label>
                        <label className="text-[10px] uppercase block mb-1">Hijos menores</label>
                        <select value={numeroHijos} onChange={e => setNumeroHijos(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl"><option value="0">0 Hijos</option><option value="1">1 Hijo (+10%)</option><option value="2">2 Hijos (+20%)</option></select>
                    </div>
                    <div className="bg-white p-6 rounded-[2.5rem] shadow-xl border-2 border-blue-500/20">
                        <div className="flex justify-between items-center mb-4">
                            <h2 className="text-sm font-black uppercase text-blue-600 italic">¿Simular Modalidad 40?</h2>
                            <button onClick={() => setUsaM40(!usaM40)} className={`w-12 h-6 rounded-full transition-colors ${usaM40 ? 'bg-green-500' : 'bg-slate-300'} relative`}><div className={`absolute top-1 w-4 h-4 bg-white rounded-full transition-all ${usaM40 ? 'left-7' : 'left-1'}`}></div></button>
                        </div>
                        {usaM40 && <div className="space-y-4 animate-fade-in">
                            <input type="number" value={aniosM40} onChange={e => setAniosM40(Number(e.target.value))} className="w-full p-3 bg-slate-50 border rounded-xl font-black" placeholder="Años Inversión" />
                            <input type="number" value={salarioInversionM40} onChange={e => setSalarioInversionM40(Number(e.target.value))} className="w-full p-3 bg-green-50 border-green-200 border rounded-xl font-black text-green-700" placeholder="Salario a Cotizar" />
                        </div>}
                    </div>
                  </div>
                  <div className="lg:col-span-7">
                    <div className="bg-slate-900 p-10 rounded-[3rem] text-white shadow-2xl text-center relative overflow-hidden print:bg-white print:text-slate-900 print:border-2">
                        <p className="text-blue-400 font-black uppercase text-xs mb-4">Pensión Mensual Proyectada</p>
                        <h2 className="text-7xl font-black mb-10">{fmt(calculo73)}</h2>
                        <button onClick={() => window.print()} className="w-full bg-white text-slate-900 py-4 rounded-2xl font-black uppercase text-xs no-print">Imprimir Reporte</button>
                    </div>
                  </div>
                </div>
              )}

              {view === 'ley97' && (
                <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div className="bg-white p-8 rounded-[3rem] shadow-xl border border-slate-100">
                        <h2 className="text-2xl font-black text-slate-800 uppercase italic mb-8">Simulador Ley 97</h2>
                        <div className="space-y-4 text-slate-700 font-bold">
                            <label className="text-[10px] uppercase text-slate-400">Saldo actual AFORE</label>
                            <input type="number" value={aforeSaldo} onChange={e => setAforeSaldo(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl font-black" />
                            <label className="text-[10px] uppercase text-slate-400">Salario Mensual</label>
                            <input type="number" value={aforeSalario} onChange={e => setAforeSalario(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl font-black" />
                            <div className="grid grid-cols-2 gap-4">
                                <div><label className="text-[10px] uppercase text-slate-400">Edad Actual</label><input type="number" value={aforeEdad} onChange={e => setAforeEdad(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl" /></div>
                                <div><label className="text-[10px] uppercase text-slate-400">Edad Retiro</label><input type="number" value={aforeRetiro} onChange={e => setAforeRetiro(Number(e.target.value))} className="w-full p-4 bg-slate-50 border rounded-2xl" /></div>
                            </div>
                        </div>
                    </div>
                    <div className="bg-slate-900 p-10 rounded-[3rem] text-white shadow-2xl flex flex-col justify-center text-center">
                        <p className="text-orange-400 font-black uppercase text-xs mb-2">Pensión Mensual Estimada</p>
                        <h2 className="text-7xl font-black mb-6">{fmt(calculoLey97)}</h2>
                        <button onClick={() => window.print()} className="mt-10 bg-white text-slate-900 py-4 rounded-2xl font-black uppercase text-xs no-print">Imprimir Reporte</button>
                    </div>
                </div>
              )}

              {view === 'salario' && (
                <div className="bg-white p-8 md:p-12 rounded-[3rem] shadow-2xl border border-slate-100 min-h-screen">
                    <h2 className="text-3xl font-black uppercase italic text-slate-800 mb-8">Salario Promedio 250 Sem</h2>
                    <div className="space-y-4 mb-8">
                        {filas.map((f, i) => (
                            <div key={i} className="grid grid-cols-1 md:grid-cols-3 gap-4 p-5 bg-slate-50 rounded-[2rem] border border-slate-100">
                                <input type="date" value={f.desde} onChange={e => actualizarFila(i, 'desde', e.target.value)} className="p-3 rounded-xl border font-bold" />
                                <input type="date" value={f.hasta} onChange={e => actualizarFila(i, 'hasta', e.target.value)} className="p-3 rounded-xl border font-bold" />
                                <input type="number" placeholder="Diario" value={f.salario} onChange={e => actualizarFila(i, 'salario', Number(e.target.value))} className="p-3 rounded-xl border font-black text-blue-600" />
                            </div>
                        ))}
                    </div>
                    <button onClick={agregarFila} className="w-full py-4 border-4 border-dashed border-slate-100 rounded-[2rem] text-slate-300 font-black uppercase text-xs no-print">+ Agregar Periodo</button>
                    <div className="mt-12 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div className="bg-slate-900 p-8 rounded-[2.5rem] text-center text-white"><p class="text-[10px] font-bold mb-1">Semanas Totales</p><p class="text-4xl font-black">{calculoSalario.semanas}</p></div>
                        <div className="gold-gradient p-8 rounded-[2.5rem] text-center text-slate-900"><p class="text-[10px] font-black mb-1">Promedio Resultante</p><p class="text-4xl font-black">{fmt(calculoSalario.promedio)}</p></div>
                    </div>
                </div>
              )}
            </div>
          );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
